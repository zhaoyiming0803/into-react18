{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.less"]
}
